<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:layout_margin="10sp"
        android:paddingBottom="25sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2sp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/homeName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:text="Persphone"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/homeHead"
                android:src="@drawable/allmother_odin_light"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                 />


        </LinearLayout>

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="2sp"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="0.5" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:text="Stats"
                    android:gravity="center"
                    android:textSize="20sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="0.5"
                    android:text="Hp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/homeHp1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="0.5"
                    android:text="Atk"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/homeAtk1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="0.5"
                    android:text="Def"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/homeDef1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="0.5"
                    android:text="Rec"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/homeRec1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="0.5"
                    android:text="Crit Dmg"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/homeCritDmg1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="0.5"
                    android:text="Crit Rate"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/homeCritRate1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight="0.5"
                    android:text="Resist"

                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/homeRes1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="15sp" />

            </TableRow>

        </TableLayout>


    </LinearLayout>


</LinearLayout>


