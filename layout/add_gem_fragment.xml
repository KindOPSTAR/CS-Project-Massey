<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10sp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/gemAttribute"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="#d11f08"
                android:entries="@array/choose_one"
                android:padding="0dp"
                android:textSize="0sp" />
            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="#d11f08"
                android:entries="@array/choose_sub"
                android:padding="0dp"
                android:textSize="0sp" />
            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="#d11f08"
                android:entries="@array/choose_sub"
                android:padding="0dp"
                android:textSize="0sp" />
            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="#d11f08"
                android:entries="@array/choose_sub"
                android:padding="0dp"
                android:textSize="0sp" />
            <Spinner
                android:id="@+id/spinner5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="#d11f08"
                android:entries="@array/choose_sub"
                android:padding="0dp"
                android:textSize="0sp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/gemNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <EditText
                android:id="@+id/gemMainInput"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="0 - 68%"
                android:inputType="numberDecimal"
                android:layout_weight="1" />
            <EditText
                android:id="@+id/gemSubInput1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="4% - 45%"
                android:inputType="numberDecimal"
                android:layout_weight="1" />
            <EditText
                android:id="@+id/gemSubInput2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="4% - 45%"
                android:inputType="numberDecimal"
                android:layout_weight="1" />
            <EditText
                android:id="@+id/gemSubInput3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="4% - 45%"
                android:inputType="numberDecimal"
                android:layout_weight="1" />
            <EditText
                android:id="@+id/gemSubInput4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:hint="4% - 45%"
                android:inputType="numberDecimal"
                android:layout_weight="1" />

    </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
             android:layout_height="0dp"
            android:gravity="bottom"
              android:layout_weight="4">
             <ImageView
                 android:id="@+id/imageAddGEM"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:src="@drawable/pugilist_square_15"
                 android:layout_height="match_parent" />

            <Button
                android:id="@+id/addGemToDatabase"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Add gem"
                android:textSize="20sp"

                android:layout_height="wrap_content" />



    </LinearLayout>

</LinearLayout>